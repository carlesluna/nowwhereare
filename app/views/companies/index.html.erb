<h1>Listing companies</h1>


<%= link_to 'New company', new_company_path %>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Owner</th>
    <th>Contact</th>
    <th>Email</th>
    <th>Comments</th>
    <th colspan="9"></th>
  </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.city %></td>
      <td><%= company.address %></td>
      <td><%= company.phone %></td>
      <td><%= company.owner %></td>
      <td><%= company.contact %></td>
      <td><%= company.email %></td>
      <td><%= company.comments %></td>
      <td><%= link_to 'Show', company_path(company) %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Destroy', company_path(company),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
